<h1 class="mb-4">Projects</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Project Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each_with_index do |project, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td class="text-primary font-weight-bold"><%= project.name %></td>
        <td><span class="badge badge-info"><%= project.status.humanize %></span></td>
        <td>
          <%= link_to "History", project_path(project), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>